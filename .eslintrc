{
  "extends": [
    "airbnb"
  ],
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true
  },
  "ecmaFeatures": {
    "jsx": true,
    "es6": true,
    "classes": true
  },
  "rules": {
     "comma-dangle": [1, 'never'],
     "camelcase": [1, { "properties": "always"}],
     "no-underscore-dangle" : 0,
     semi: [1, 'never'],
     "max-len": [1, 180, 4],
     "arrow-body-style": [0],
     "react/jsx-no-bind": [0],
     "import/no-unresolved": [0] // Until import plugin supports webpack 2 resolveModules
  }
}
